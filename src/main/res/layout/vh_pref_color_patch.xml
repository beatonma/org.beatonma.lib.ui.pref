<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <!-- Represents a single color choice -->
  <org.beatonma.lib.ui.pref.view.ColorPatchView
    android:id="@+id/colorpatch"
    style="@style/ColorPatch"
    android:layout_width="@dimen/color_patch_size"
    android:layout_height="@dimen/color_patch_size"
    android:layout_margin="1dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:elevation="2dp"
    android:minWidth="@dimen/color_patch_size"
    android:minHeight="@dimen/color_patch_size"
    android:padding="8dp"
    app:patch_cornerRadius="@dimen/card_corner_radius"
    app:patch_isCircle="false"/>
</layout>